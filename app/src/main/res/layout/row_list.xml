<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/button_rounded_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:src="@drawable/images"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <com.test.utils.CustomTextView
                            android:id="@+id/tvHeader"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="Lawyer's Name"
                            android:textSize="@dimen/_18sdp"
                            android:textColor="@color/black"
                            android:src="@mipmap/first_tab"
                            android:layout_height="wrap_content" />


                        <com.test.utils.CustomTextView
                            android:id="@+id/tvHeader2"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="Speciality"
                            android:textSize="@dimen/_18sdp"
                            android:src="@mipmap/first_tab"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ivSortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">


                    <com.test.utils.CustomTextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/sort_by"
                        android:text="4.5"
                        android:drawableRight="@mipmap/rating"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_gravity="right"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <com.test.utils.CustomTextView
                            android:id="@+id/tvContent"
                            android:layout_width="wrap_content"
                            android:src="@mipmap/sort_by"
                            android:layout_gravity="right"
                            android:text="@string/_55_5"
                            android:textSize="@dimen/_18sdp"

                            android:textColor="@color/black"
                            android:layout_height="match_parent" />


                        <com.test.utils.CustomTextView
                            android:id="@+id/tvContent12"
                            android:layout_width="wrap_content"
                            android:src="@mipmap/sort_by"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:text="/h"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/small_arrow"
                    android:padding="@dimen/_10sdp"/>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/verified_icon"
                android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
</layout>